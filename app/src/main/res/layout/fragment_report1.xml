<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1c1c1e"
    tools:context=".ui.report.Report1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pre_regular_400"
            android:text="Step 1."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/pre_regular_400"
            android:text="분실물 정보 입력"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_step"
            app:layout_constraintStart_toEndOf="@id/tv_step"
            app:layout_constraintTop_toTopOf="@id/tv_step" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/tv_des">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:hint="분실물명을 입력해주세요."
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="분실물 명"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@id/cl_name">

            <EditText
                android:id="@+id/et_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:hint="카테고리을 입력해주세요."
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="카테고리"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@id/cl_category">

            <EditText
                android:id="@+id/et_region"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:hint="분실지역을 입력해주세요."
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="분실지역"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_region_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@id/cl_region">

            <EditText
                android:id="@+id/et_region_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:hint="상세주소를 입력해주세요."
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_region_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="상세주소"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toStartOf="@id/cl_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_region_detail">

            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:gravity="center"
                android:hint="2023. 01. 01"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="분실 날짜"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_date"
            app:layout_constraintTop_toBottomOf="@id/cl_region_detail">

            <EditText
                android:id="@+id/et_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle_empty_7e7e7e_radius_14"
                android:fontFamily="@font/pre_medium_500"
                android:gravity="center"
                android:hint="00 시경"
                android:textColor="@color/white"
                android:textColorHint="#7e7e7e"
                android:textCursorDrawable="@null"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/color_1c1c1e"
                android:paddingHorizontal="4dp"
                android:text="분실 시간"
                android:textColor="#7e7e7e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>