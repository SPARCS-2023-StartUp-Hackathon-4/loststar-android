<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rv_nickname_message_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:textColor="#7e7e7e"
        android:fontFamily="@font/pre_semibold_600"
        android:text="username"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rvContents_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_solid_white_rounded_10"
        android:fontFamily="@font/pre_medium_500"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="채팅"
        android:textColor="@color/color_1c1c1e"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_nickname_message_room" />

    <TextView
        android:id="@+id/rvDate_message_room"
        app:layout_constraintBottom_toBottomOf="@id/rvContents_message"
        app:layout_constraintStart_toEndOf="@id/rvContents_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pre_medium_500"
        android:layout_marginStart="4dp"
        android:textColor="#cfcfcf"
        android:text="9월 10일 15:20"
        android:textSize="10sp" />
</androidx.constraintlayout.widget.ConstraintLayout>
