<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1c1c1e"
    tools:context=".ui.reportComplete.ReportCompleteActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/pre_bold_700"
        android:text="분실신고가\n완료되었습니다."
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pre_medium_500"
        android:text="추천 아이템"
        android:textColor="#cfcfcf"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rocket"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_solid_white_rounded_20"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend">

        <TextView
            android:id="@+id/tv_rocket"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="🚀"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:fontFamily="@font/pre_semibold_600"
            android:text="궤도 진입 추진기"
            android:textColor="@color/color_1c1c1e"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rocket_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pre_regular_400"
            android:text="메인 상단 홈화면에 분실/습득\n게시물이 1주간 상위 노출 됩니다."
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_rocket_name"
            app:layout_constraintTop_toBottomOf="@id/tv_rocket_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rocket"
            android:layout_width="69dp"
            android:layout_height="33dp"
            android:background="@drawable/bg_solid_black_rounded_6"
            android:fontFamily="@font/pre_semibold_600"
            android:text="사용하기"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/pre_semibold_600"
            android:text="1개 보유중"
            android:textColor="@color/color_1c1c1e"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_rocket"
            app:layout_constraintEnd_toStartOf="@id/btn_rocket"
            app:layout_constraintTop_toTopOf="@id/btn_rocket" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_huble"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_solid_white_rounded_20"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_rocket">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huble"
            android:layout_width="69dp"
            android:layout_height="33dp"
            android:background="@drawable/bg_solid_black_rounded_6"
            android:fontFamily="@font/pre_semibold_600"
            android:text="사용하기"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_huble_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/pre_semibold_600"
            android:text="1개 보유중"
            android:textColor="@color/color_1c1c1e"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_huble"
            app:layout_constraintEnd_toStartOf="@id/btn_huble"
            app:layout_constraintTop_toTopOf="@id/btn_huble" />

        <TextView
            android:id="@+id/tv_huble"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="🔊"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_huble_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:fontFamily="@font/pre_semibold_600"
            android:text="허블 확성기"
            android:textColor="@color/color_1c1c1e"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/tv_huble"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_huble_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pre_regular_400"
            android:text="분실/습득 지역 거주 유저들에게\n분실/습득 알림 푸시가 발송됩니다."
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_huble_name"
            app:layout_constraintTop_toBottomOf="@id/tv_huble_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_next"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_solid_white_rounded_14"
        android:fontFamily="@font/pre_semibold_600"
        android:stateListAnimator="@null"
        android:text="스토어로 구경가기"
        android:textColor="@color/color_1c1c1e"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/button_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_home"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_rectangle_filled_1c1c1e_width_1_radius_14_white"
        android:fontFamily="@font/pre_semibold_600"
        android:stateListAnimator="@null"
        android:text="홈으로"
        android:textColor="#7e7e7e"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>