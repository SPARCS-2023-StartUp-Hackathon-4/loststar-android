<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <TextView
        android:id="@+id/rvContents_message"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_solid_black_rounded_10"
        android:fontFamily="@font/pre_medium_500"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="채팅"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rvDate_message_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/pre_medium_500"
        android:text="9월 10일 15:20"
        android:textColor="#cfcfcf"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/rvContents_message"
        app:layout_constraintEnd_toStartOf="@+id/rvContents_message" />

    <TextView
        android:id="@+id/rv_nickname_message_room"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="2sp"
        app:layout_constraintEnd_toStartOf="@+id/rvDate_message_room"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
